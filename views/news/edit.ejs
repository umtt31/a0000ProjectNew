<% layout('./layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit New</h1>
    <div class="col-6 offset-3">
        <form action="/news<%= _new._id %>?_method=PUT" method="POST">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" id="title" class="form-control" name="_new[title]" value="<%= _new.title %>">
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image</label>
                <input type="text" id="title" class="form-control" name="_new[image]" value="<%= _new.image %>">
            </div>
            <div class="mb-3">
                <label for="title" class="form-label"></label>
                <input type="text" id="title" class="form-control" name="_new[description]" value="<% _new.description %>">
            </div>
            <div class="mb-3">
                <label for="title" class="form-label">Content</label>
                <textarea type="text" id="title" class="form-control" name="_new[content]"><%= _new.content %></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Upload</button>
            </div>
        </form>
        <a href="/news">Back to News</a>
    </div>
</div>